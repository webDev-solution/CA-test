{%- include 'style_mp_section' -%}
{%- assign sett_ctxt_color = section.settings.ctxt_color -%}
{%- assign sett_ctxtlink_color = section.settings.ctxtlink_color -%}
{%- assign sett_cbt_color = section.settings.cbt_color -%}
{%- assign sett_cbtbr_color = section.settings.cbtbr_color -%}
{%- assign sett_cbtbg_color = section.settings.cbtbg_color -%}
{%- if section.settings.section_bg_color != blank -%}
<style type="text/css">
  #shopify-section-{{section.id}} {background-image: linear-gradient(to right, {{section.settings.section_bg_color}}, {{section.settings.section_bg_color}} 50%, #ffffff 50%, #ffffff);}
@media only screen and (max-width: 35em){
  #shopify-section-{{section.id}} {background-image: linear-gradient(to bottom, {{section.settings.section_bg_color}}, {{section.settings.section_bg_color}} 50%, #ffffff 50%, #ffffff);}
}
</style>
{%- endif -%}
<style type="text/css">
  #shopify-section-{{section.id}} .collection_txtblock, #shopify-section-{{section.id}} .collection_txtblock .jas_title_1, #shopify-section-{{section.id}} .jas-clist{
    color:{{sett_ctxt_color}};
  }
  #shopify-section-{{section.id}} .jas-clist a{
    color: inherit;
  }
  #shopify-section-{{section.id}} .jas-clist a:hover{
    color:{{sett_ctxtlink_color}};
  }
  #shopify-section-{{section.id}} .jas-view-bt{
    background-color:{{sett_cbtbg_color}};
    border:1px solid {{sett_cbtbr_color}};
    color:{{sett_cbt_color}};
  }
  #shopify-section-{{section.id}} .jas-view-bt:hover{
    color:{{sett_cbt_color}};
  }
</style>
{%- case section.settings.categories_layout -%}
   {%- when 'default' -%}
      {%- assign layout = "categories-style-default" -%}
   {%- when 'masonry' -%}
      {%- assign  layout = "categories-style-masonry categories-masonry" -%}
   {%- when 'masonry_first' -%}
      {%- assign layout = "categories-style-masonry-first categories-masonry" -%}
   {%- when 'carousel' -%}
      {%- assign layout = "categories-style-carousel" -%}
{%- endcase -%}
<div class="jas_custom_{{section.id}} jas-npcat jas-sc-wc-categories{%- if section.settings.use_container %} jas-container{%- else %} jas-full{%- endif -%}">
      {%- assign sett_title = section.settings.title -%}
      {%- assign sett_clist = section.settings.sub_clist -%}
      {%- assign sett_btxt = section.settings.viewmore_txt -%}
      {%- assign sett_btlink = section.settings.viewmore -%}
      {%- include 'jas_section_cusotm_title' -%}
      <div class="jas-row {{ layout }} categories-space-{{ section.settings.space_categories }} mt__30{%- if section.settings.categories_layout == 'carousel' %} jas-carousel{%- endif -%}"{%- if section.settings.categories_layout == 'carousel' %} data-slick='{"slidesToShow": {{ section.settings.sidetoshow }},"slidesToScroll": 1, "autoplay": {{ section.settings.use_autoplay }}, "autoplaySpeed": {{ section.settings.slider_speed }}000,"rtl": {{ settings.use_rtl }}, "speed": {{ section.settings.speed }}, "infinite": {{section.settings.use_loop}}, "arrows": {{section.settings.use_arrows}},"dots": {{section.settings.use_dots}}, "responsive":[{"breakpoint": 1024,"settings":{"slidesToShow": {{ section.settings.sidetoshow_first}} }},{"breakpoint": 600,"settings":{"slidesToShow": {{ section.settings.sidetoshow_center}} }},{"breakpoint": 480,"settings":{"slidesToShow": {{ section.settings.sidetoshow_last}} }}]}'{%- endif -%}>
         {%- if section.settings.categories_layout != 'carousel' %}<div class="jas-col-md-3 jas-item-category hide"></div>{%- endif -%}
        {%- for block in section.blocks -%}
         {%- assign collection = collections[block.settings.collection] -%}
         {%- assign number_of_collection = collection.all_products_count  -%}
         {%- assign block_image = block.settings.image -%}
         <div class="jas-col-md-{{block.settings.width}} jas-col-sm-{{block.settings.width}} {{ section.settings.categories_design }} jas-col-xs-{{block.settings.mobile_width}} jas-item-category" {{ block.shopify_attributes }}>
            <div class="jas-cat-content">
             <a href="{%- if collection.empty? -%}/admin/collections{%- else -%}{{ collection.url }}{%- endif -%}" class="jas-cat-url">
                 <div class="jas-cat-thumb">
                    {%- if block_image != blank -%}
                       {%- assign img_url = block_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                       <img src="{{ block_image | img_url: '50x50' }}" data-src="{{ img_url }}" data-widths="[157, 270, 303, 370, 377, 670, 570, 720, 900, 1080, 1296, 1512, 1728, 2048]" data-aspectratio="{{ block_image.aspect_ratio }}"  data-sizes="auto" class="lazyload w__100 attachment-shop_catalog size-shop_catalog" alt="{{block_image.alt}}" >
                       <div class="jas-wrap-lazy"></div>
                    {%- elsif collection.image != blank -%}
                       {%- assign img_url = collection.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                       <img src="{{ collection.image | img_url: '50x50' }}" data-src="{{ img_url }}" data-widths="[157, 270, 303, 370, 377, 670, 570, 720, 900, 1080, 1296, 1512, 1728, 2048]" data-aspectratio="{{ collection.image.aspect_ratio }}"  data-sizes="auto" class="lazyload w__100 attachment-shop_catalog size-shop_catalog" alt="{{collection.image.alt}}" >
                       <div class="jas-wrap-lazy"></div>
                    {%- elsif collection.products.first and collection.products.first.featured_image != blank -%}
                       {%- assign image = collection.products.first.featured_image -%}
                       {%- assign img_url = image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                       <img src="{{ image | img_url: '50x50' }}" data-src="{{ img_url }}" data-widths="[157, 270, 303, 370, 377, 670, 570, 720, 900, 1080, 1296, 1512, 1728, 2048]" data-aspectratio="{{ image.aspect_ratio }}"  data-sizes="auto" class="lazyload w__100 attachment-shop_catalog size-shop_catalog" alt="{{image.alt}}" >
                       <div class="jas-wrap-lazy"></div>
                    {%- else -%}
                        {%- capture current -%}{%- cycle 1, 2, 3 -%}{%- endcapture -%}
                       {{ 'collection-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                    {%- endif -%}
                 </div>
                 {%- if collection != blank and number_of_collection > 1 -%}
                 <span class="jat-cat-pr-count">{{number_of_collection}} {{ section.settings.categories_count | strip_html }}</span>
                 {%- endif -%}
              </a>
               <div class="hover-wrap">
                  <a href="{%- if collection.empty? -%}/admin/collections{%- else -%}{{ collection.url }}{%- endif -%}" class="jas-cat-url-overlay"></a>
                  <h3>{%- if collection.empty? -%}{{ 'homepage.onboarding.collection_title' | t }}{%- else -%}{{ collection.title }}{%- endif -%}</h3>
                  <a href="{%- if collection.empty? -%}/admin/collections{%- else -%}{{ collection.url }}{%- endif -%}">{{ section.settings.categories_view | strip_html }}</a>
               </div>
           </div>
         </div>
         {%- endfor -%}
      </div>
   {%- if section.blocks.size == 0 -%}
    {%- include 'no-blocks' -%}
   {%- endif -%}
</div>

