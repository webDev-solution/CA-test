{%- include 'style_mp_section' -%}
<style>
   .jas_custom_{{section.id}} .jas_custom_color input[type=email]{
   color:{{section.settings.section_placeholder_color}};
   }
   .jas_custom_{{section.id}} .jas_custom_color .mc4wp-form ::-webkit-input-placeholder {
   color:{{section.settings.section_placeholder_color}};
   }
   .jas_custom_{{section.id}} .jas_custom_color .mc4wp-form ::-moz-placeholder {
   color: {{section.settings.section_placeholder_color}};
   }
   .jas_custom_{{section.id}} .jas_custom_color .mc4wp-form :-moz-placeholder {
   color: {{section.settings.section_placeholder_color}};
   }
   .jas_custom_{{section.id}} .jas_custom_color .mc4wp-form input[type=email],.jas_custom_{{section.id}} .signup-newsletter-form {
   border-color: {{section.settings.section_email_color}};
   }
   .jas_custom_{{section.id}} .jas_custom_color .mc4wp-form :-ms-input-placeholder {
   color: {{section.settings.section_placeholder_color}};
   }
  /* .jas_custom_{{section.id}} .jas_custom_color .mc4wp-form input[type=submit] {
   background-color: #888888;
   border-color: #888888;
   color: #fff;
   }*/
</style>
<div class="jas_custom_{{section.id}} jas-banner-parallax{%- if section.settings.use_parallax == false %} gecko-parallax{%- endif %}{%- if section.settings.use_background_overlay %} jas_background-overlay{%- endif %}{%- if section.settings.use_parallax == false and section.settings.image != blank %} lazyload{%- endif %}{%- if section.settings.full_height %} jas-full-height{%- endif -%}"{%- if section.settings.use_parallax and section.settings.image != blank %} data-jas-parallax='1.5' data-jas-parallax-image='{{ section.settings.image | img_url: '50x50' }}'{%- endif %}{%- if section.settings.image != blank or section.settings.section_bg_color != blank %} data-bgset="{%- include 'bgset', image: section.settings.image -%}" data-sizes="auto" data-parent-fit="cover" style="{%- if section.settings.section_bg_color != blank -%}background-color: {{section.settings.section_bg_color}};{%- endif -%}{%- if section.settings.image != blank and section.settings.use_parallax == false -%}background-image: url('{{ section.settings.image | img_url: '50x50' }}');{%- endif -%}"{%- endif -%}>
   <div class="jas-container clearfix">
     <div class="jas-row">
      <div class="jas-col-xs-12 jas_custom_color">
        <div class="jas-row">
         {%- if section.settings.style == '1' -%}
            {%- if section.settings.title != blank -%}
            <div class="flex end-md center-sm center-xs jas-col-sm-6 jas-col-xs-12">
               <h4 class="tu cw fs__14 mg__0" style="line-height: 40px;color:{{section.settings.section_title_color}}">{{ section.settings.title }}</h4>
            </div>
            {%- endif -%}
            <div class="{%- if section.settings.title != blank -%}flex start-md start-sm center-xs jas-col-sm-6 jas-col-xs-12{%- else -%}flex center-xs jas-col-sm-12 jas-col-xs-12{%- endif -%}">
               <form id="mc4wp-form-{{section.id}}" role="form" action="{%- if section.settings.use_ajax_mailChimp -%}{{ settings.mcsp_form_action | replace: '/post?u', '/post-json?u' }}{%- else -%}{{ settings.mcsp_form_action }}{%- endif -%}" class="mc4wp-form mc4wp-form-{{section.id}}{%- if section.settings.use_ajax_mailChimp %} jas_ajax_mcsp{%- endif -%}" method="post">
                  <div class="mc4wp-form-fields">
                     <div class="signup-newsletter-form dib">
                        <input type="email" name="EMAIL" placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}"  value="{%- if customer -%}{{ customer.email }}{%- endif -%}" class="input-text" required="required">
                        <input type="submit" value="{{ 'general.newsletter_form.submit' | t }}" class="submit-btn">
                     </div>
                  </div>
                  <div class="mc4wp-response"></div>
               </form> <!-- / MailChimp for shopify Plugin -->
            </div>
         {%- else -%}
            <div class="jas_custom_color center-xs jas-col-xs-12 np-newswrap">
               <h2 style="font-size: 38px; color:{{section.settings.section_title_color}};line-height: 1;text-align: center" class="jas_custom_heading font-title">{{ section.settings.title }}</h2>
               <div style="color:{{section.settings.section_subtitle_color}};" class="np-newsdesc">{{ section.settings.sub_title }}</div>
               <div class="np-custom-inner">
                  <form id="mc4wp-form-{{section.id}}" role="form" action="{%- if section.settings.use_ajax_mailChimp -%}{{ settings.mcsp_form_action | replace: '/post?u', '/post-json?u' }}{%- else -%}{{ settings.mcsp_form_action }}{%- endif -%}" class="mc4wp-form mc4wp-form-{{section.id}}{%- if section.settings.use_ajax_mailChimp %} jas_ajax_mcsp{%- endif -%}" method="post">
                     <div class="mc4wp-form-fields">
                       {% comment %}
                        <div class="db">
                           <input type="email" name="EMAIL" placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}"  value="{%- if customer -%}{{ customer.email }}{%- endif -%}" class="input-text" required="required">
                           <input type="submit" value="{{ 'general.newsletter_form.submit' | t }}" class="button-o">
                        </div>
                       {% endcomment %} 
                       <div class="signup-newsletter-form dib">
                          <input type="email" name="EMAIL" placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}"  value="{%- if customer -%}{{ customer.email }}{%- endif -%}" class="input-text" required="required">
                          <input type="submit" value="{{ 'general.newsletter_form.send' | t }}" class="submit-btn">
                       </div>
                     </div>
                     <div class="mc4wp-response"></div>
                  </form> <!-- / MailChimp for shopify Plugin -->
               </div>
            </div>
         {%- endif -%}
       </div>
      </div>
   </div>
   </div>
</div>
{%- schema -%}
  {
    "name": "Newsletter",
    "class":"jas-section type_jas_newsletter clearfix",
    "settings": [
       {
        "type": "select",
        "id": "style",
        "label": "Newsletter Style: (optional)",
        "default": "1",
        "options": [
          {
            "value": "1",
            "label": "Style 1"
          },
          {
            "value": "2",
            "label": "Style 2"
          }
        ]
      },
      {
