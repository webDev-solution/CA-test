{%- include 'style_mp_section' -%}
<div class="jas-row jas_custom_{{section.id}} jas-guarantee jas-banner-parallax gecko-parallax{%- if section.settings.use_background_overlay %} jas_background-overlay{%- endif %}{%- if section.settings.image != blank %} lazyload{%- endif %}"{%- if section.settings.image != blank or section.settings.section_bg_color != blank %} data-bgset="{%- include 'bgset', image: section.settings.image -%}" data-sizes="auto" data-parent-fit="cover" style="{%- if section.settings.section_bg_color != blank -%}background-color: {{section.settings.section_bg_color}};{%- endif -%}{%- if section.settings.image != blank -%}background-image: url('{{ section.settings.image | img_url: '50x50' }}');{%- endif -%}"{%- endif -%}>
   <div class="clearfix{%- if section.settings.use_container %} jas-container{%- else %} jas-col-xs-12{%- endif -%}">
      <div class="jas-row">
         <div class="clearfix" style="width:100%;">
          {%- if section.settings.section_title != blank -%}<h3 class="jas_title_1 pr mb__20" style="color: {{section.settings.heading_color}}">{{ section.settings.section_title }}</h3>{%- endif -%}
         </div>
         {%- if section.blocks.size > 0 -%}
            {% for block in section.blocks %}
               <div class="jas-col-sm-{{block.settings.width}} jas-col-xs-12">
                  <div class="jas-service {{block.settings.text_align}} mt__50">
                     {%- if block.settings.icon_image != blank -%}<div class="icon {{block.settings.icon_size}} cp"><img src="{{ block.settings.icon_image | img_url: '' }}"></div>{%- endif -%}
                     {%- if block.settings.icon != blank -%}<div class="icon {{block.settings.icon_size}} cp" style="color: {{block.settings.icon_color}}"><i class="{%- if block.settings.icon contains 'fa' %}fa {% endif -%}{{ block.settings.icon }}"></i></div>{%- endif -%}
                     <div class="content {{block.settings.text_content_align}}">
                        <h3 class="title cp tu fs__14 mg__0 mb__5" style="color: {{block.settings.title_color}}">{{ block.settings.title }}</h3>
                        <p class="mg__0" style="color: {{block.settings.text_color}}">{{ block.settings.text }}</p>
                     </div>
                  </div>
               </div>
            {%- endfor -%}
         {%- endif -%}
         {%- if section.blocks.size == 0 -%}
          {%- include 'no-blocks' -%}
         {%- endif -%}
      </div>
   </div>
</div>
