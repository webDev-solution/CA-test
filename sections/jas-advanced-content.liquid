{%- include 'style_mp_section' -%}
<div class="jas-row jas_custom_{{section.id}}">
  {%- for block in section.blocks -%}
    <div class="custom__item col-xs-12 col-sm-{{block.settings.width}} {{ block.settings.alignment }}" {{ block.shopify_attributes }}>
      <div class="custom__item-inner custom__item-inner--{{ block.type }}">
            {%- if block.settings.code != blank -%}
              <div class="rte" data-section-id="{{ section.id }}" data-section-type="featured-content-section">
                {{ block.settings.code }}
              </div>
            {%- else -%}
              <div class="rte tc">
                {{ 'homepage.onboarding.no_content' | t }}
              </div>
            {%- endif -%}
      </div>
    </div>
  {%- endfor -%}
  {%- if section.blocks.size == 0 -%}
    <div class="wrapper">
      <div class="grid">
        <div class="grid__item">
          <div class="rte tc">
            {{ 'homepage.onboarding.no_content' | t }}
          </div>
        </div>
      </div>
   </div>
  {%- endif -%}
</div>

