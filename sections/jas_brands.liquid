{%- include 'style_mp_section' -%}
<div class="jas-row jas_custom_{{section.id}} jas-banner-parallax gecko-parallax{%- if section.settings.use_background_overlay %} jas_background-overlay{%- endif %}{%- if section.settings.image != blank %} lazyload{%- endif %}"{%- if section.settings.image != blank or section.settings.section_bg_color != blank %} data-bgset="{%- include 'bgset', image: section.settings.image -%}" data-sizes="auto" data-parent-fit="cover" style="{%- if section.settings.section_bg_color != blank -%}background-color: {{section.settings.section_bg_color}};{%- endif -%}{%- if section.settings.image != blank -%}background-image: url('{{ section.settings.image | img_url: '50x50' }}');{%- endif -%}"{%- endif -%}>
   <div class="clearfix{%- if section.settings.use_container %} jas-container{%- else %} jas-col-xs-12{%- endif -%}">
      <div class="jas-row">
         <div class="clearfix mb__20" style="width:100%;">
          {%- if section.settings.section_title != blank -%}<h3 class="jas_title_1 pr" style="color: {{section.settings.heading_color}}">{{ section.settings.section_title }}</h3>{%- endif -%}
         </div>
         {%- if section.blocks.size > 0 -%}
            {% for block in section.blocks %}
               <div class="jas-col-md-{{block.settings.width}} jas-col-sm-4 jas-col-xs-6">
                  <div class="jas-brands-item mb__30">
                    {%- if block.settings.logo_image != blank -%}{%- if block.settings.brand_url != blank -%}<a href="{{block.settings.brand_url}}" target="_blank">{%- endif -%}<img src="{{ block.settings.logo_image | img_url: '' }}">{%- if block.settings.brand_url != blank -%}</a>{%- endif -%}{%- endif -%}
                  </div>
               </div>
            {%- endfor -%}
         {%- endif -%}
         {%- if section.blocks.size == 0 -%}
          {%- include 'no-blocks' -%}
         {%- endif -%}
      </div>
   </div>
</div>
{% schema %}
  {
    "name": "Brands Info",
    "class": "jas-section type_jas_shipping clearfix",
    "settings": [
     {
        "type": "header",
        "content": "== General Settings"
