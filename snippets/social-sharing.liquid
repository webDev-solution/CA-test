      {%- if settings.social_tumblr_link != blank -%}<a href="{{ settings.social_tumblr_link }}" class="dib br__50 tc tumblr" target="_blank"><i class="fa fa-tumblr"></i></a>{%-endif-%}
      {%- if settings.social_youtube_link != blank -%}<a href="{{ settings.social_youtube_link }}" class="dib br__50 tc youtube" target="_blank"><i class="fa fa-youtube-play"></i></a>{%-endif-%}
