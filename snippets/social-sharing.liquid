      {%- if settings.social_snapchat_link != blank -%}<a href="{{ settings.social_snapchat_link }}" class="dib br__50 tc snapchat" target="_blank"><i class="fa fa-snapchat"></i></a>{%-endif-%}
    {%-endif-%}
  </div>
