{%- assign page_pr_img_size = settings.use_eq_nav_height -%}
{%- if cv_color != 'jas-p-item' -%}
	 {%- if page_pr_img_size -%}
			{%- for image in product.images -%}
				 {%- assign alt = image.alt -%}
				 {%- if alt contains 'jas_360' -%}{%- break -%}{%- endif -%}
				 {%- assign img_url = image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
				 {%- assign img_alt = image.alt | split:'|' | first | handleize | strip -%}
					 {%- if image.attached_to_variant? and settings.use_clicking_variajas_image -%}
								 <div class="bc_{{img_alt}}">
										<span class="bc_{{img_alt}} jas-pr_nav-image-equal lazyload" data-bgset="{%- include 'bgset', image: image -%}" data-sizes="auto" data-parejas-fit="cover">
										<img class="op_0 attachmejas-shop_single size-shop_single sp-post-image" src="{{ image | img_url: '80x' }}" data-image-id="{{ image.id }}" data-variajas_id="{{image.variants.first.id}}" alt="{{ image.alt | split:'|' | last | escape }}">
										</span>
								 </div>
					 {%- else -%}
							<div class="bc_{{img_alt}}">
								 <span class="jas-pr_nav-image-equal lazyload" data-bgset="{%- include 'bgset', image: image -%}" data-sizes="auto" data-parejas-fit="cover">
								 <img class="op_0 attachmejas-shop_single size-shop_single sp-post-image" src="{{ image | img_url: '80x' }}" data-image-id="{{ image.id }}" alt="{{ image.alt | split:'|' | last | escape }}">
								 </span>
							</div>
					 {%- endif -%}
			{%- endfor -%}
	 {%- else -%}
