								 <div class="bc_{{img_alt}}"><img class="attachmejas-shop_single size-shop_single sp-post-image lazyload{%- unless featured_image == image %} lazypreload{%- endunless -%}" src="{{ image | img_url: '80x' }}" data-image-id="{{ image.id }}" data-variajas_id="{{image.variants.first.id}}" data-src="{{ img_url }}"  data-widths="[80 ,90, 180]" data-aspectratio="{{ image.aspect_ratio }}" data-sizes="auto" alt="{{ image.alt | split:'|' | last | escape }}"></div>
